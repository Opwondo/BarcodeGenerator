<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".ScanActivity">

    <!-- Camera Preview Surface -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay with scanning frame -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">

        <!-- Top Info Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#CC1C1C1E"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Back"
                app:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Put the code into the frame"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Spacer to balance the back button -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Scanning Frame -->
        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@drawable/scan_frame_border">

            <!-- Animated scanning line -->
            <View
                android:id="@+id/scan_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#FF6200EE"
                android:layout_gravity="top" />

        </FrameLayout>

        <!-- Bottom Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#CC1C1C1E"
            android:padding="16dp"
            android:gravity="center">

            <!-- Scan Image Button -->
            <LinearLayout
                android:id="@+id/scan_image_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/image"
                    android:contentDescription="Scan Image"
                    app:tint="#FFFFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Image"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Flashlight Button -->
            <LinearLayout
                android:id="@+id/flashlight_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/flashlight_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/flashlight"
                    android:contentDescription="Flashlight"
                    app:tint="#FFFFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flashlight"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Batch Scan Button -->
            <LinearLayout
                android:id="@+id/batch_scan_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/scan"
                    android:contentDescription="Batch Scan"
                    app:tint="#FFFFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Scan"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>