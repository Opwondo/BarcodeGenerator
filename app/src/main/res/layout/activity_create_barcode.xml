<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1C1C1E"
    android:padding="20dp"
    tools:context=".CreateBarcodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Back"
                app:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Barcode"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="16dp" />

            <!-- Spacer to balance the back button -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Barcode Type Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barcode Type"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/barcode_type_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio_single"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Single"
                android:textColor="#FFFFFFFF"
                android:buttonTint="#FF6200EE"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_branch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Branch"
                android:textColor="#FFFFFFFF"
                android:buttonTint="#FF6200EE" />

        </RadioGroup>

        <!-- Barcode Data Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barcode Data"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/barcode_data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundMode="outline"
            app:hintTextColor="#AAAAAA">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/barcode_data_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. 01208500"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Helper Text -->
        <TextView
            android:id="@+id/helper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automatically generate a random barcode for you."
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginBottom="24dp" />

        <!-- Format Instructions -->
        <TextView
            android:id="@+id/format_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPC-E\nEnter 8 digits. Must start with '0' or '1', and the last one is a check code calculated by an algorithm using the first 7 digits."
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="30dp" />

        <!-- Generate Button -->
        <Button
            android:id="@+id/generate_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="GENERATE BARCODE"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF6200EE"
            android:layout_marginTop="10dp" />

        <!-- Add this after the Generate Button -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SAVE TO GALLERY"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF4CAF50"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <!-- Preview Section (for generated barcode) -->
        <LinearLayout
            android:id="@+id/preview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:background="#FF2C2C2E"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barcode Preview"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/barcode_preview"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="#FFFFFFFF"
                android:padding="8dp" />

            <TextView
                android:id="@+id/barcode_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01208500"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>