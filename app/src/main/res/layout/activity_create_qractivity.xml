<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1C1C1E"
    android:padding="20dp"
    tools:context=".CreateQRActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Back"
                app:tint="#FFFFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create QR Code"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="16dp" />

            <!-- Spacer to balance the back button -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Input Type Selector -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp"
            android:spinnerMode="dropdown" />

        <!-- Text Input Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundMode="outline"
            app:hintTextColor="#AAAAAA">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/qr_text_editText"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top"
                android:hint="Please fill in the text here."
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:maxLines="5" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Character Counter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/char_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/150"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Warning Text -->
        <TextView
            android:id="@+id/warning_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*The QR code will be difficult to recognize when the content exceeds 150 characters."
            android:textColor="#FFB00020"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="30dp" />

        <!-- Create Button -->
        <Button
            android:id="@+id/create_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="CREATE"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF6200EE"
            android:layout_marginTop="10dp" />

        <!-- Add this after the Create Button -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SAVE TO GALLERY"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF4CAF50"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

        <!-- QR Code Preview Section -->
        <LinearLayout
            android:id="@+id/preview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="30dp"
            android:layout_marginTop="30dp"
            android:background="#FF2C2C2E"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Code Preview"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <ImageView
                android:id="@+id/qr_preview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#FFFFFFFF"
                android:padding="8dp" />

            <TextView
                android:id="@+id/qr_data_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample QR Code Data"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>